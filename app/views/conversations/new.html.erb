<%= form_for @conversation do |f| %>
<% if @conversation.errors.present? %>
<ul>
  <% @conversation.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<div><%= f.label :recipient_id %></div>
<div><%= f.text_field :recipient_id %></div>

<div><%= f.label :sender_id %></div>
<div><%= f.text_field :sender_id %></div>

<%= f.submit "Submit" %>

<% end %>
