<div class="ui segment">
  <a class="ui ribbon label"><%= @user.name %></a>

  <div class="ui small circular image">
    <%= image_tag(@user.avatar) %>
  </div>

  <div class="ui segment">
    <div class="content">
      <p><%= @user.email %></p>
      <p><%= @user.zipcode %></p>
      <p><%= @user.age %></p>
      <p><%= @user.gender %></p>
      <p><%= @user.bio %></p>
    </div>
  </div>


    <% if current_user && current_user.id == @user.id %>
      <div class="ui button">
        <%= link_to "Edit", edit_user_path(@user) %>
      </div>
    <% end %>

</div>

<div class="ui segment three column grid">

  <a class="ui ribbon label"><%= @user.name %>'s Dogs</a>

    <% @user.dogs.each do |dog| %>
      <div class="column">
        <div class="ui card">
          <div class="content">
            <div class="header">
              <div class="ui avatar image">
                <%= image_tag(dog.image) %>
              </div>
              <%= dog.name %>
            </div>
            <div class="description">
              <%= dog.bio %>
            </div>
          </div>
        </div>
          <% if current_user && current_user.id == @user.id %>
            <div class="ui inverted teal button">
              <%= link_to "Edit", edit_dog_path(dog) %>
            </div>
            <div class="ui button">
              <%= link_to 'Delete Dog', dog_path(dog), method: :delete, data: {confirm: "Are you sure?"}  %>
            </div>
          <% end %>
      </div>
    <% end  %>

    <% if current_user && current_user.id == @user.id %>
      <div class="column">
        <div class="ui teal inverted button">
          <%= link_to "Add Dog", new_dog_path %>
        </div>
      </div>
    <% end %>

</div>
