<div class="ui segment">
  <h1>Sign Up</h1>
</div>

<div class="ui form segment">
  <%= form_for @user, url: signup_path, html: {class: "ui form"} do |f| %>

  <%= render 'shared/errors', object: @user %>
  
    <div class="three fields">
      <div class="field">
        <%= f.label :name %>
        <div class="field">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="field">
        <%= f.label :email %>
        <div class="field">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="field">
        <%= f.label :zipcode %>
        <div class="field">
          <%= f.text_field :zipcode %>
        </div>
      </div>
    </div>

    <div class="two fields">
      <div class="field">
        <label>Gender</label>
        <div class="ui selection dropdown">
          <div class="default text">Gender</div>
          <i class="dropdown icon"></i>
          <input id="new-gender" name="user[gender]" type="hidden">
          <div class="menu">
            <div class="item" data-value="Female">Female</div>
            <div class="item" data-value="Male">Male</div>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :Age %>
        <div class="field">
          <%= f.text_field :age %>
        </div>
      </div>

    </div>

    <div class="field">
      <%= f.label "Tell Us More About You" %>
      <div class="field">
        <%= f.text_area :bio %>
      </div>
    </div>

    <div class="field">
      <%= f.label "Upload a picture" %>
      <div class="field">
        <%= f.file_field :avatar %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password %>
      <div class="field">
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <div class="field">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>

    <%= f.submit "Submit", class: "ui submit button" %>

  <% end  %>
</div>
