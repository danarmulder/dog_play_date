<div class="ui grid">
  <div class="row">
    <div class="five wide column":></div>
    <div class="six wide column":>
      <div class="ui segment">
        <div class="ui comments">
          <h3 class="ui dividing header" id="<%= @conversation.id %>"></h3>
          <div id="container">
            <% @messages.each do |message| %>
            <% user = User.find(message.user_id) %>
            <div class="comment">
              <a class="avatar">
                <%= image_tag user.avatar, class: "avatar" %>
              </a>
              <div class="content">
                <a class="author"><%= user.name %></a>
                <div class="metadata">
                  <span class="date"> <%= message.message_time %></span>
                </div>
                <div class="text">
                  <%= message.body %>
                </div>
              </div>
            </div>
            <% end %>
          </div>
          <form class="ui reply form">
            <div class="field">
              <textarea></textarea>
            </div>
            <div class="comment" id="user_name" data-id="<%=User.find(current_user.id).name %>">
              <a class="avatar" >
                <%= image_tag current_user.avatar, class: "ui avatar image", id: "current_user" %>
              </a>
            </div>
            <div class="ui blue labeled submit icon button" id = "reply" data-id="<%= current_user.id %>">
              <i class="icon edit"></i> Add Reply
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
