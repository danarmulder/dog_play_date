<!DOCTYPE html>
<html>
<head>
  <title>DogPlayDate</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script type="text/javascript"
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyADZde1pQ-JiuWhP_x7IVH81kremM40ZDM">
  </script>
</head>
<body>

  <div class="ui inverted fixed menu navbar page grid">
    <a href="/" class="brand item">Dog Day Date</a>
    <div class="right menu">
      <% if current_user %>
        <%= link_to current_user.name, user_path(current_user), class: "ui item active visible" %>
        <%= link_to "Mailbox", conversations_path, class: "item" %>
        <%= link_to "Search", dogs_path, class: "item" %>
        <%= link_to "Sign Out", signout_path, class: "item"%>
      <% else %>
        <%= link_to 'Sign Up', signup_path, class: "item" %>
        <%= link_to "Sign-In", signin_path, class: "item"%>
        <%= link_to "Search", dogs_path, class: "item" %>
      <% end %>
    </div>
  </div>

  <% if notice %>
    <div class="ui positive message">
      <i class="close icon"></i>
      <div class="header">
        <p id="notice" class="text-center"><%= notice %></p>
      </div>
    </div>
  <% end %>

  <% if alert %>
  <div class="ui error message">
    <i class="close icon"></i>
    <div class="header">
      <p id="notice" class="text-center"><%= alert %></p>
    </div>
  </div>
  <% end %>

<%= yield %>

<script charset="utf-8">
  $('.ui.dropdown').dropdown();
</script>
</body>
</html>
