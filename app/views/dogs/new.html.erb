<h3>Dog Info</h3>

<%= image_tag current_user.avatar %>

<%= form_for @dog do |f| %>
<% if @dog.errors.present? %>
<ul>
  <% @dog.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<div><%= f.label :name %></div>
<div><%= f.text_field :name %></div>

<div><%= f.file_field :image %></div>

<div><%= f.label :breed %></div>
<div><%= f.text_field :breed %></div>

<div><%= f.label :age %></div>
<div><%= f.text_field :age %></div>

<div><%= f.label :size %></div>
<div><%= f.select :size, ["Small", "Medium", "Large", "Extra Large"], {include_blank: "Size"} %></div>

<div><%= f.label :play %></div>
<div><%= f.select :play, ["Toy-Oriented", "Food-Oriented", "Tag/Wreslting Oriented" ], {include_blank: "Favorite Way to Play"} %></div>

<div><%= f.label :gender %></div>
<div><%= f.select :gender, ["Female", "Male"] %></div>

<div><%= f.label :personality %></div>
<div><%= f.select :personality, ["Submissive", "Dominant"], {include_blank: "Personality"} %></div>

<div><%= f.label :bio %></div>
<div><%= f.text_field :bio %></div>

<%= f.submit "Submit" %>

<% end %>
